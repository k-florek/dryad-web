  // Custom styles for this template
  link(href='/css/signin.css' rel='stylesheet')
form(action='/register',method="post",oninput='password_confirm.setCustomValidity(password_confirm.value != password.value ? "Passwords do not match." : "")').form-signin
  //img.mb-4(src='/docs/4.3/assets/brand/bootstrap-solid.svg' alt='' width='72' height='72')
  h1.h3.mb-3.font-weight-normal Register new user
  label.sr-only(for='inputEmail') Email address
  input#inputEmail.form-control(type='email' name="username" placeholder='Email address' required='' autofocus='')
  label.sr-only(for='inputPassword') Password
  input#inputPassword.form-control(type='password' name="password" placeholder='Password' required='')
  label.sr-only(for='inputPassword') Confirm Password
  input#inputConfrimPassword.form-control(type='password' name="password_confirm" placeholder='Confirm Password' required='')
  h5.font-weight-normal Administrator
  select#adminSelect.custom-select
    option(selected=false) False
    option(value=true) True
  h5.font-weight-normal Group
  input#inputGroup.form-control(name="group" placeholder='Group' required='')
    
  button.btn.btn-lg.btn-primary.btn-block(type='submit') Register
